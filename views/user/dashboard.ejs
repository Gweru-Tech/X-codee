<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .card-hover {
            transition: all 0.3s ease;
        }
        
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="flex-shrink-0 flex items-center">
                        <i class="fas fa-code text-purple-600 text-2xl mr-2"></i>
                        <span class="text-xl font-bold text-gray-800">X-Coder</span>
                    </a>
                    
                    <div class="hidden md:flex ml-10 space-x-8">
                        <a href="/user/dashboard" class="text-purple-600 border-b-2 border-purple-600 px-3 py-2 text-sm font-medium">Dashboard</a>
                        <a href="/user/projects" class="text-gray-700 hover:text-purple-600 px-3 py-2 text-sm font-medium transition">Projects</a>
                        <a href="/user/services" class="text-gray-700 hover:text-purple-600 px-3 py-2 text-sm font-medium transition">Services</a>
                        <a href="/user/analytics" class="text-gray-700 hover:text-purple-600 px-3 py-2 text-sm font-medium transition">Analytics</a>
                    </div>
                </div>
                
                <div class="flex items-center space-x-4">
                    <button onclick="toggleNotifications()" class="relative text-gray-600 hover:text-purple-600 transition">
                        <i class="fas fa-bell text-xl"></i>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                    </button>
                    
                    <div class="relative">
                        <button onclick="toggleUserMenu()" class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                            <img class="h-8 w-8 rounded-full" src="<%= user.profile.avatar || 'https://ui-avatars.com/api/?name=' + user.username + '&background=667eea&color=fff' %>" alt="<%= user.username %>">
                            <span class="ml-2 text-gray-700 font-medium"><%= user.username %></span>
                            <i class="fas fa-chevron-down ml-2 text-gray-500"></i>
                        </button>
                        
                        <div id="userMenu" class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
                            <div class="py-1">
                                <a href="/user/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">
                                    <i class="fas fa-user mr-2"></i> Profile
                                </a>
                                <a href="/user/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">
                                    <i class="fas fa-gear mr-2"></i> Settings
                                </a>
                                <hr class="my-1">
                                <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50">
                                    <i class="fas fa-sign-out-alt mr-2"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Welcome Section -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Welcome back, <%= user.profile.firstName || user.username %>!</h1>
            <p class="text-gray-600 mt-2">Here's what's happening with your projects today.</p>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="card-hover bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium">Total Projects</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.projects %></p>
                        <p class="text-green-600 text-sm mt-2">
                            <i class="fas fa-arrow-up mr-1"></i>12% from last month
                        </p>
                    </div>
                    <div class="bg-purple-100 rounded-lg p-3">
                        <i class="fas fa-folder text-purple-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="card-hover bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium">Active Projects</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.activeProjects %></p>
                        <p class="text-green-600 text-sm mt-2">
                            <i class="fas fa-arrow-up mr-1"></i>8% from last week
                        </p>
                    </div>
                    <div class="bg-blue-100 rounded-lg p-3">
                        <i class="fas fa-rocket text-blue-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="card-hover bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium">Deployed</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.deployedProjects %></p>
                        <p class="text-green-600 text-sm mt-2">
                            <i class="fas fa-arrow-up mr-1"></i>5 new deployments
                        </p>
                    </div>
                    <div class="bg-green-100 rounded-lg p-3">
                        <i class="fas fa-server text-green-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="card-hover bg-white rounded-xl shadow-lg p-6 border-l-4 border-orange-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium">Services</p>
                        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.services %></p>
                        <p class="text-orange-600 text-sm mt-2">
                            <i class="fas fa-plus mr-1"></i>Create new service
                        </p>
                    </div>
                    <div class="bg-orange-100 rounded-lg p-3">
                        <i class="fas fa-cogs text-orange-600 text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Recent Projects -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-xl font-semibold text-gray-900">Recent Projects</h2>
                        <a href="/user/projects" class="text-purple-600 hover:text-purple-500 text-sm font-medium">
                            View All <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                    
                    <div class="space-y-4">
                        <% if (recentProjects.length === 0) { %>
                            <div class="text-center py-8">
                                <i class="fas fa-folder-open text-gray-400 text-4xl mb-4"></i>
                                <p class="text-gray-500">No projects yet</p>
                                <a href="/user/projects/create" class="btn-primary text-white px-4 py-2 rounded-lg text-sm mt-4 inline-block">
                                    <i class="fas fa-plus mr-2"></i>Create Your First Project
                                </a>
                            </div>
                        <% } else { %>
                            <% recentProjects.forEach(project => { %>
                                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1">
                                            <h3 class="font-medium text-gray-900"><%= project.name %></h3>
                                            <p class="text-sm text-gray-500 mt-1"><%= project.type %></p>
                                            <div class="flex items-center mt-2 space-x-4">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= project.status === 'deployed' ? 'bg-green-100 text-green-800' : project.status === 'active' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                                                    <%= project.status %>
                                                </span>
                                                <% if (project.deployment && project.deployment.url) { %>
                                                    <a href="<%= project.deployment.url %>" target="_blank" class="text-purple-600 hover:text-purple-500 text-sm">
                                                        <i class="fas fa-external-link-alt mr-1"></i>Live
                                                    </a>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-2 ml-4">
                                            <button onclick="editProject('<%= project._id %>')" class="text-gray-600 hover:text-purple-600 transition">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button onclick="deployProject('<%= project._id %>')" class="text-gray-600 hover:text-green-600 transition">
                                                <i class="fas fa-rocket"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <!-- Activity Chart -->
                <div class="bg-white rounded-xl shadow-lg p-6 mt-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-6">Activity Overview</h2>
                    <canvas id="activityChart" height="100"></canvas>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Quick Actions</h2>
                    <div class="space-y-3">
                        <a href="/user/projects/create" class="w-full flex items-center justify-center px-4 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                            <i class="fas fa-plus mr-2"></i>
                            New Project
                        </a>
                        <button onclick="openUploadModal()" class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                            <i class="fas fa-upload mr-2"></i>
                            Upload Files
                        </button>
                        <a href="/service/create" class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                            <i class="fas fa-cog mr-2"></i>
                            Create Service
                        </a>
                    </div>
                </div>

                <!-- Recent Services -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-semibold text-gray-900">Recent Services</h2>
                        <a href="/user/services" class="text-purple-600 hover:text-purple-500 text-sm font-medium">
                            View All
                        </a>
                    </div>
                    
                    <div class="space-y-3">
                        <% if (recentServices.length === 0) { %>
                            <p class="text-gray-500 text-center py-4">No services yet</p>
                        <% } else { %>
                            <% recentServices.forEach(service => { %>
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                    <div>
                                        <p class="font-medium text-gray-900 text-sm"><%= service.name %></p>
                                        <p class="text-xs text-gray-500"><%= service.category %></p>
                                    </div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= service.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                                        <%= service.status %>
                                    </span>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <!-- Tips -->
                <div class="bg-gradient-to-r from-purple-500 to-blue-600 rounded-xl shadow-lg p-6 text-white">
                    <h3 class="text-lg font-semibold mb-3">
                        <i class="fas fa-lightbulb mr-2"></i>
                        Pro Tip
                    </h3>
                    <p class="text-sm opacity-90">
                        Want to deploy your project faster? Use our one-click deployment feature to instantly publish to multiple platforms including Render, Vercel, and Netlify.
                    </p>
                    <button class="mt-4 bg-white text-purple-600 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-100 transition">
                        Learn More
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Modal -->
    <div id="uploadModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Upload Files</h3>
                <div class="file-upload-area border-2 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer hover:border-purple-500 transition">
                    <i class="fas fa-cloud-upload-alt text-gray-400 text-4xl mb-4"></i>
                    <p class="text-gray-600 mb-2">Drag and drop files here</p>
                    <p class="text-gray-500 text-sm mb-4">or</p>
                    <button class="btn-primary text-white px-4 py-2 rounded-lg text-sm">
                        Browse Files
                    </button>
                </div>
                <div class="mt-6 flex justify-end space-x-3">
                    <button onclick="closeUploadModal()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                        Cancel
                    </button>
                    <button onclick="uploadFiles()" class="btn-primary text-white px-4 py-2 rounded-lg">
                        Upload
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // User menu toggle
        function toggleUserMenu() {
            const menu = document.getElementById('userMenu');
            menu.classList.toggle('hidden');
        }

        // Upload modal
        function openUploadModal() {
            document.getElementById('uploadModal').classList.remove('hidden');
        }

        function closeUploadModal() {
            document.getElementById('uploadModal').classList.add('hidden');
        }

        // Project actions
        function editProject(projectId) {
            window.location.href = `/user/projects/${projectId}/edit`;
        }

        function deployProject(projectId) {
            showLoading();
            fetch(`/deploy/deploy/${projectId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                hideLoading();
                if (data.success) {
                    showAlert('Deployment started successfully!', 'success');
                } else {
                    showAlert('Deployment failed: ' + data.message, 'error');
                }
            })
            .catch(error => {
                hideLoading();
                showAlert('Deployment failed: ' + error.message, 'error');
            });
        }

        // File upload
        function uploadFiles() {
            showAlert('File upload feature coming soon!', 'info');
            closeUploadModal();
        }

        // Activity Chart
        const ctx = document.getElementById('activityChart').getContext('2d');
        const activityChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Projects Created',
                    data: [3, 5, 2, 8, 4, 6, 3],
                    borderColor: 'rgb(102, 126, 234)',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    tension: 0.4
                }, {
                    label: 'Deployments',
                    data: [2, 3, 1, 6, 3, 4, 2],
                    borderColor: 'rgb(34, 197, 94)',
                    backgroundColor: 'rgba(34, 197, 94, 0.1)',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Notification toggle (placeholder)
        function toggleNotifications() {
            showAlert('Notification center coming soon!', 'info');
        }
    </script>
</body>
</html>