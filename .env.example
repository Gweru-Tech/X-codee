# X-Coder Platform Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/xcoder-platform

# Session Management
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@xcoderplatform.com
FROM_NAME=X-Coder Platform

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=xcoder-platform-uploads

# Deployment Services
# Render
RENDER_API_KEY=your-render-api-key

# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_TEAM_ID=your-vercel-team-id

# Netlify
NETLIFY_ACCESS_TOKEN=your-netlify-access-token

# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-whatsapp-webhook-verify-token

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Elasticsearch (for search)
ELASTICSEARCH_URL=http://localhost:9200

# Background Jobs
BULL_REDIS_URL=redis://localhost:6379

# Webhook URLs
WEBHOOK_BASE_URL=https://yourdomain.com/webhooks

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOADS=true
ENABLE_DEPLOYMENT=true
ENABLE_WHATSAPP_BOTS=true
ENABLE_ANALYTICS=true

# Development Tools
DEBUG=xcoder:*
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# PORT=80
# ENABLE_SSL=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=xcoder-platform-backups

# Security Headers
HELMET_CSP_DIRECTIVES=default-src 'self';script-src 'self' 'unsafe-inline';style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;font-src 'self' https://fonts.gstatic.com;img-src 'self' data: https:

# Performance
CACHE_TTL=3600
COMPRESSION_THRESHOLD=1024